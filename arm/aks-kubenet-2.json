{
    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "cluster_name": {
            "type": "String",
            "defaultValue": "crgar-public-aks-cluster-3"
        },
        "location": {
            "type": "String",
            "defaultValue": "westeurope"
        },
        "kubernetesVersion": {
            "type": "String",
            "defaultValue": "1.19.9"
        },
        "log_analytics_workspace_id": {
            "type": "String",
            "defaultValue": "/subscriptions/930c11b0-5e6d-458f-b9e3-f3dda0734110/resourcegroups/crgar-aks-public-rg/providers/microsoft.operationalinsights/workspaces/crgar-aks-public-la"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.ContainerService/managedClusters",
            "apiVersion": "2020-12-01",
            "name": "[parameters('cluster_name')]",
            "location": "[parameters('location')]",
            "identity": {
                "type": "SystemAssigned"
            },
            "sku": {
                "name": "Basic",
                "tier": "Free"
            },
            "properties": {
                "kubernetesVersion": "[parameters('kubernetesVersion')]",
                "dnsPrefix": "crgarcluster",
                "fqdnSubdomain": "crgarfqdn",
                "apiServerAccessProfile": {
                    "enablePrivateCluster": false
                },
                "enableRBAC": true,
                "enablePodSecurityPolicy": false,
                "networkProfile": {
                    "networkPlugin": "kubenet",
                    "loadBalancerSku": "Standard"
                },
                "agentPoolProfiles": [
                    {
                        "name": "default",
                        "count": 1,
                        "maxCount": 4,
                        "minCount": 1,
                        "vmSize": "Standard_DS2_v2",
                        "osDiskSizeGB": 30,
                        "maxPods": 30,
                        "type": "VirtualMachineScaleSets",
                        "availabilityZones": [
                            "1",
                            "2",
                            "3"
                        ],
                        "enableAutoScaling": true,
                        "orchestratorVersion": "[parameters('kubernetesVersion')]",
                        "enableNodePublicIP": true,
                        "mode": "System",
                        "osType": "Linux"
                    }
                ],
                "addonProfiles": {
                    "omsagent": {
                        "enabled": true,
                        "config": {
                            "logAnalyticsWorkspaceResourceID": "[parameters('log_analytics_workspace_id')]"
                        }                    
                    }
                }
            }
        },
        {
            "type": "Microsoft.ContainerService/managedClusters/providers/diagnosticSettings",
            "name": "[concat(parameters('cluster_name'), '/Microsoft.Insights/diagnostics')]",
            "apiVersion": "2017-05-01-preview",
            "dependsOn": [
                "[concat('Microsoft.ContainerService/managedClusters/', parameters('cluster_name'))]"
            ],
            "properties": {
                "workspaceId": "[parameters('log_analytics_workspace_id')]",
                "metrics": [
                    {
                        "category": "AllMetrics",
                        "enabled": true
                    }
                ],
                "logs": [
                    {
                        "category": "kube-apiserver",
                        "enabled": true
                    },
                    {
                        "category": "kube-audit",
                        "enabled": true
                    },
                    {
                        "category": "kube-audit-admin",
                        "enabled": true
                    },
                    {
                        "category": "kube-controller-manager",
                        "enabled": true
                    },
                    {
                        "category": "kube-scheduler",
                        "enabled": true
                    },
                    {
                        "category": "cluster-autoscaler",
                        "enabled": true
                    },
                    {
                        "category": "guard",
                        "enabled": true
                    }
                ]
            }
        }
    ]
}